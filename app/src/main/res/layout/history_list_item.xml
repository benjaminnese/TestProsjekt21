<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="workout"
            type="no.usn.ruud.testprosjekt2.database.WorkoutInDb" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:clickable="true"
        app:cardBackgroundColor="#6E6E6E"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:contentPadding="5dp"
        app:strokeColor="@color/colorPrimary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_day_of_week"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Monday"
                    android:transitionName="transformation_text_day_of_the_week" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:transitionName="transformation_text_date" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_exercise_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:transitionName="transformation_exercise_type" />

            <TextView
                android:id="@+id/text_exercise_reps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:transitionName="transformation_text_exercise_reps" />

            <TextView
                android:id="@+id/text_exercise_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:transitionName="transformation_text_exercise_weight" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>

